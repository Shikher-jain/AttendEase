# Environment Configuration for Attendance System

# Database Configuration
DATABASE_URL=sqlite:///./attendance.db
# For PostgreSQL (Render): postgresql://user:password@host:port/database

# Storage Configuration
STORAGE_TYPE=local  # Options: 'local' or 'cloudinary' (use cloudinary for Render)
UPLOAD_DIR=student_images

# Cloudinary Configuration (Required if STORAGE_TYPE=cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes

# Face Recognition Configuration
FACE_RECOGNITION_MODEL=hog  # Options: 'hog' or 'cnn'
FACE_RECOGNITION_TOLERANCE=0.6  # Lower is more strict (0.0-1.0)
FACE_DETECTION_METHOD=both  # Options: 'auto' (face_recognition only), 'haar' (Haar Cascade only), or 'both' (combined)

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
ALLOWED_ORIGINS=*  # Comma-separated list, use * for all origins (restrict in production)
